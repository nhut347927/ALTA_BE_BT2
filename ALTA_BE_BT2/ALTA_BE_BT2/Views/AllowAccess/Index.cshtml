@model IEnumerable<ALTA_BE_BT2.Models.AllowAccess>

@{
    ViewData["Title"] = "Allow Accesses";
}

<h1>Allow Accesses</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccessProperties)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessProperties)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AllowAccessId" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.AllowAccessId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>