                    </div>
                    <div class="form-group">
                        <label asp-for="Major" class="control-label"></label>
                        <input asp-for="Major" class="form-control" />
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cvfile" class="control-label"></label>
                        <input asp-for="Cvfile" class="form-control" type="file" />
                        <span asp-validation-for="Cvfile" class="text-danger"></span>
                    </div>
                </div>
            </div>
