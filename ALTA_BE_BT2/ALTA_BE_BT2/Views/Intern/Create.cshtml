                    </div>
                    <div class="form-group">
                        <label asp-for="InternAddress" class="control-label"></label>
                        <input asp-for="InternAddress" class="form-control" />
                        <span asp-validation-for="InternAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageData" class="control-label"></label>
                        <input asp-for="ImageData" class="form-control" type="file" />
                        <span asp-validation-for="ImageData" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InternMail" class="control-label"></label>
                        <input asp-for="InternMail" class="form-control" />
                        <span asp-validation-for="InternMail" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="University" class="control-label"></label>
                        <input asp-for="University" class="form-control" />
